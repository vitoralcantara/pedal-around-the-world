<VirtualHost *:80>
    Servername {{ server_name }}
	ServerAdmin {{ server_admin }}
	
	DocumentRoot /var/www/
	<Directory />
		Options FollowSymLinks
		AllowOverride None
	</Directory>
	<Directory /var/www/>
		Options Indexes FollowSymLinks MultiViews
		AllowOverride None
		Order allow,deny
		allow from all
	</Directory>

        Alias /media/ {{ project_root }}/media/
    
        <Directory {{ project_root }}/media>
            Order deny,allow
            Allow from all
        </Directory>
         
        Alias /djtools-media/ {{ project_root }}/djtools/media/
    
        <Directory {{ project_root }}/djtools/media>
            Order deny,allow
            Allow from all
        </Directory>
 
        Alias /admin-media/ {{ project_root }}/admin-media/

        <Directory {{ project_root }}/admin-media>
            Order deny,allow
            Allow from all
        </Directory>

        <Directory {{ project_root }}/apache>
            Order deny,allow
            Allow from all
        </Directory>

        WSGIScriptAlias / {{ project_root }}/apache/{{ base_server_name }}.wsgi

	ScriptAlias /cgi-bin/ /usr/lib/cgi-bin/
	<Directory "/usr/lib/cgi-bin">
		AllowOverride None
		Options +ExecCGI -MultiViews +SymLinksIfOwnerMatch
		Order allow,deny
		Allow from all
	</Directory>

	ErrorLog /var/log/apache2/{{ project_name }}_error.log

	# Possible values include: debug, info, notice, warn, error, crit,
	# alert, emerg.
	LogLevel warn

	CustomLog /var/log/apache2/{{ project_name }}_access.log combined

    Alias /doc/ "/usr/share/doc/"
    <Directory "/usr/share/doc/">
        Options Indexes MultiViews FollowSymLinks
        AllowOverride None
        Order deny,allow
        Deny from all
        Allow from 127.0.0.0/255.0.0.0 ::1/128
    </Directory>

</VirtualHost>
