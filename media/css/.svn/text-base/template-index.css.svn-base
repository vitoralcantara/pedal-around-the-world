
/* ESQUERDA */

#div-esquerda {
	float: left;
	width: 160px;
	padding: 0px;
}

#div-esquerda img {
	border: solid 1px #333;
	-moz-border-radius: 2px;
	-webkit-border-radius: 2px;
}

/* DIREITA */

#div-direita {
	padding: 0px 10px;
	margin-left: 8px;
	float: left;
	width: 780px;
	border-left: dashed 1px #AAA;
}

/* DIREITA - NOTICIAS */

#noticias {
    -moz-border-radius: 3px;
    -webkit-border-radius: 3px;
    background-color: #FFDE9F;
    border: solid 1px #FFD37F; 
    padding: 8px;
    margin: 0px 10px 8px 0px;
}

.noticia h1 {
    margin: 0 !important;
    padding: 0 !important;
	font-size: 100%;
}

.noticia p {
    text-align: justify;
    margin: 0;
    color: #666;
}

/* DIREITA - MODULOS */

.div-modulo {
	overflow: hidden;
	-moz-border-radius: 4px;
	-webkit-border-radius: 4px;
	background: WHITE;
	border: solid 1px #EEE;
	padding: 4px;
    margin: 1px 10px 8px 0px;
	width: 370px !important;
	float: left;
}

.div-modulo:hover {
    background-color: #E7F4F9;
    border: 1px solid #D8F0FA;
}

.active {
    background-color: #BEEBFF !important;
    border: 1px solid #99DEFD !important;;
}

.div-modulo .modulo-img {
	float: left; 
	width: 95px;
}

.div-modulo .modulo-info {
	float: left; 
	width: 255px;
}
